doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    link(rel="stylesheet", href="/styles/style.css")
  body
    include ../header.pug
    
    main.container
      h1 Search Flights
      
      if error
        .alert.alert-error
          p= error
      
      form.search-form(action="/flight/search", method="POST")
        .form-group
          label(for="origin") Origin (Airport Code)
          input#origin(type="text", name="origin", placeholder="e.g. JFK, LAX", required)
        
        .form-group
          label(for="destination") Destination (Airport Code)
          input#destination(type="text", name="destination", placeholder="e.g. LHR, CDG", required)
        
        .form-group
          label(for="date") Date
          input#date(type="date", name="date", required)
        
        .form-group
          button(type="submit") Search Flights
      
      .airport-codes
        h3 Common Airport Codes
        .row
          .col
            ul
              li JFK - New York John F. Kennedy
              li LAX - Los Angeles International
              li ORD - Chicago O'Hare
              li ATL - Atlanta Hartsfield-Jackson
          .col
            ul
              li LHR - London Heathrow
              li CDG - Paris Charles de Gaulle
              li FRA - Frankfurt Airport
              li SYD - Sydney Airport
    
    include ../footer.pug



